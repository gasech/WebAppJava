<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/view/pages/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>products</servlet-name>
        <jsp-file>/view/pages/products.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>ShowProduct</servlet-name>
        <servlet-class>controller.ShowProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowProduct</servlet-name>
        <url-pattern>/products/product</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BuyProduct</servlet-name>
        <servlet-class>controller.BuyProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyProduct</servlet-name>
        <url-pattern>/products/product/buy</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>x</servlet-name>
        <jsp-file>/view/pages/buy_product.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>x</servlet-name>
        <url-pattern>/x</url-pattern>
    </servlet-mapping>
    
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>
